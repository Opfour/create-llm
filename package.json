{
  "name": "create-llm",
  "version": "0.1.0",
  "description": "CLI tool to scaffold LLM training projects with batteries included",
  "main": "dist/index.js",
  "bin": {
    "create-llm": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "npm run build && node dist/test-e2e.js",
    "test:all": "npm run build && node dist/test-template-manager.js && node dist/test-config-generator.js && node dist/test-scaffolder.js && node dist/test-e2e.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "llm",
    "cli",
    "machine-learning",
    "pytorch",
    "transformer",
    "scaffolding"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
